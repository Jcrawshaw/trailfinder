<h1><%= @trail.title %></h1>
<h3><%= @trail.state %></h3>
<p><%= @trail.body %></p>
<div class="row">
  <div class="col-md-8">
    <h3>What other's have to say about this trail!</h3>
    <% @posts.each do |post| %>
      <div class="media">
        <div class="media-body">
          <%= post.body %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="container">
  <%= link_to "New Post", new_trail_post_path(@trail), class: 'btn btn-success' %>
</div>
    
  

<%= link_to "Edit", edit_trail_path(@trail), class: 'btn btn-success' %>
<%= link_to "Delete Trail", @trail, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete?' } %>
