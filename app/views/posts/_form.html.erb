<h1>New Post</h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for [@trail, @post] do |f| %>
      <div class="form-group">
        <%= f.label :post %>
        <%= f.text_field :body, class: 'form-control', placeholder: "Enter your trail post." %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
   </div>
</div>

